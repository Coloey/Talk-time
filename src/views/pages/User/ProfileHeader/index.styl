.content
    background: #F3F5F8;
    width: 100%;
    display: flex;
    .head
        margin: 0 20px 24px;
        position: relative;
        .avatar
            // position: absolute;
            // top: -100px;
            position relative
            top: -30px;
            width: 120px;
            height 120px;
            background-color: #a58cf7
            border-radius: 8px;
            border: 4px solid #fff;
            background-size: cover;
            z-index:2;
            cursor: pointer;
            .avatar-uploader
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                display: flex;
                justify-content: center;
                align-items: center;
                cursor: pointer;
                background-color: rgba(0,0,0,0.5)
                opacity: 1;
                color: #fff; 
    .body
        .item
            margin-top: 10px;
            .item-title
                display: inline-block;
                width: 80px;
                font-weight: 700
                // margin-right: 20px;
            .inputText
                width: 300px;
                padding: 6px;
                border-radius: 8px;
        .footer
            margin-top: 10px;
            .editBtn
                width: 150px;
                background-color: #8F6FFE;
                padding: 10px;
                border: none;
                outline: none;
                color: #eae3d2;
                cursor: pointer;
                margin-right: 80px;
                &:hover
                    background-color: #a58cf7
            .saveBtn
                width: 150px;
                padding: 10px;
                border: none;
                outline: none;
                cursor: pointer;
                &:hover
                    background-color: #f5f4f8ef

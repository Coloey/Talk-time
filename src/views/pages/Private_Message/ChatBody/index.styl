.message_container>*
    margin-bottom: 10px;
.message_container 
    width: 100%;
    height: 80vh;
    background-color: #fff;
    padding: 20px;
    overflow-y: scroll;
    .message_chats
        p 
        font-size: 16px;
        font-weight bold
        .sender_name
            text-align: right;
        .text
            font-weight: normal;
        .message_sender
            background-color: #C3B4F7;
            max-width: 300px;
            padding: 10px;
            border-radius: 10px;
            margin-left: auto;
            font-size: 15px;
        .message_recipient
            background-color: #f8e2e2;
            width: 300px;
            padding: 10px;
            border-radius: 10px;
            font-size: 15px;
    .message_status
        position: fixed;
        bottom: 50px;
        font-size: 13px;
        font-style: italic;
.emoji
    text-align: left;
    width: 100%;
    height: 100%;
    background: #fff;
    border: 1px solid #dcdfe6;
    box-shadow: 0 2px 4px 0 rgb(0 0 0 / 12%), 0 0 6px 0 rgb(0 0 0 / 4%);
    .emoji-default
        width: calc(100% - 40px);
        height: 202px;
        overflow-y: auto;
        // @include scroll-bar();
        padding: 0px 20px;
        li 
            display: inline-block;
            //padding: 5px;
            font-size: 24px;
            width: 30px;
            height: 34px;
            overflow: hidden;
            cursor: pointer;
            :hover
                background-color: #d5d5d5;

    